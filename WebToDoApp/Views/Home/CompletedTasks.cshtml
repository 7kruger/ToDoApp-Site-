@using WebToDoApp.Models.Entities
@{
    ViewBag.Title = "Выполненые задачи";
}
@model List<ToDoItem>

<div style="margin-top: 50px;" class="container row">
    <table class="table">
        <tr>
            <td>Задача</td>
            <td>Описание задачи</td>
            <td></td>
            <td></td>
        </tr>
        @foreach (ToDoItem item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td><a href="/Home/Return/@item.Id" class="btn btn-warning">Вернуть задание к невыполненым</a></td>
                <td><a href="/Home/Delete/@item.Id" class="btn btn-danger">Удалить</a></td>
            </tr>
        }
    </table>
</div>